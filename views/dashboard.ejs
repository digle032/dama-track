<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>DamaTrack Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-4">
    <h2 class="mb-3">Welcome to DamaTrack</h2>
    <p>Logged in as <strong><%= role %></strong> | <a href="/logout">Logout</a></p>

    <a href="/shipments/new" class="btn btn-primary mb-3">Add New Shipment</a>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Location</th>
          <th>Tracking</th>
          <th>Client</th>
          <th>Transport</th>
          <th>Courier</th>
          <th>Status</th>
          <% if (role === 'admin') { %><th>Actions</th><% } %>
        </tr>
      </thead>
      <tbody>
        <% shipments.forEach(shipment => { %>
          <tr>
            <td><%= shipment.date.toISOString().slice(0,16).replace('T',' ') %></td>
            <td><%= shipment.location %></td>
            <td>
              <% if (role === 'admin') { %>
                <a href="/shipments/edit/<%= shipment.id %>"><%= shipment.tracking %></a>
              <% } else { %>
                <%= shipment.tracking %>
              <% } %>
            </td>
            <td><%= shipment.client %></td>
            <td><%= shipment.transport %></td>
            <td><%= shipment.courier %></td>
            <td><%= shipment.status %></td>
            <% if (role === 'admin') { %>
              <td>
                <a href="/shipments/edit/<%= shipment.id %>" class="btn btn-warning btn-sm">Edit</a>
                <a href="/shipments/delete/<%= shipment.id %>" class="btn btn-danger btn-sm">Delete</a>
              </td>
            <% } %>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
