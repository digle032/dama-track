<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>DamaTrack Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container py-5" style="background-color: #f8f9fa;">
  <h1 class="text-center mb-4" style="color: red; font-family: 'Georgia', serif;">Dama Cargo Logistics</h1>

  <div class="text-end mb-3">
    <a href="/shipments/add" class="btn btn-primary">Add Shipment</a>
    <a href="/logout" class="btn btn-secondary">Logout</a>
  </div>

  <table class="table table-bordered table-hover table-sm bg-white shadow-sm">
    <thead class="table-dark">
      <tr>
        <th>Date</th>
        <th>Location</th>
        <th>Tracking #</th>
        <th>Client</th>
        <th>Transport</th>
        <th>Courier</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% shipments.forEach(shipment => { %>
        <tr>
          <td><%= shipment.date ? shipment.date.toISOString().slice(0, 10) : '' %></td>
          <td><%= shipment.location %></td>
          <td><%= shipment.tracking %></td>
          <td><%= shipment.client %></td>
          <td><%= shipment.transport %></td>
          <td><%= shipment.courier %></td>
          <td><%= shipment.status %></td>
          <td>
            <a href="/shipments/edit/<%= shipment.id %>" class="btn btn-warning btn-sm">Edit</a>
            <a href="/shipments/delete/<%= shipment.id %>" class="btn btn-danger btn-sm">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
