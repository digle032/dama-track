<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>DamaTrack Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f4f4f4;
      padding: 20px;
    }
    .container {
      background: white;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    h1 {
      color: #c0392b;
      margin-bottom: 20px;
    }
    .btn-add {
      margin-bottom: 20px;
      background-color: #c0392b;
      color: white;
    }
    .btn-edit, .btn-delete {
      margin-right: 5px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>DamaTrack Dashboard</h1>
    <p>Welcome, <%= username %>! (<%= role %>)</p>
    <a href="/logout" class="btn btn-secondary mb-3">Logout</a>
    <a href="/new" class="btn btn-add">Add New Shipment</a>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Date</th>
          <th>Location</th>
          <th>Tracking</th>
          <th>Client</th>
          <th>Transport</th>
          <th>Courier</th>
          <th>Status</th>
          <% if (role === 'admin') { %><th>Actions</th><% } %>
        </tr>
      </thead>
      <tbody>
        <% shipments.forEach(shipment => { %>
          <tr>
            <td><%= shipment.date.toISOString().slice(0,16).replace('T', ' ') %></td>
            <td><%= shipment.location %></td>
            <td>
              <% if (role === 'admin') { %>
                <a href="/shipments/edit/<%= shipment.id %>"><%= shipment.tracking %></a>
              <% } else { %>
                <%= shipment.tracking %>
              <% } %>
            </td>
            <td><%= shipment.client %></td>
            <td><%= shipment.transport %></td>
            <td><%= shipment.courier %></td>
            <td><%= shipment.status %></td>
            <% if (role === 'admin') { %>
              <td>
                <a href="/shipments/edit/<%= shipment.id %>" class="btn btn-warning btn-sm btn-edit">Edit</a>
                <form action="/shipments/delete/<%= shipment.id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-danger btn-sm btn-delete">Delete</button>
                </form>
              </td>
            <% } %>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
