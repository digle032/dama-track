<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>DamaTrack - Dashboard</title>
  <link rel="stylesheet" href="/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Welcome to DamaTrack</h2>
      <div>
        <a href="/shipments/add" class="btn btn-primary">Add Shipment</a>
        <a href="/logout" class="btn btn-secondary">Logout</a>
      </div>
    </div>

    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Date</th>
          <th>Location</th>
          <th>Tracking #</th>
          <th>Client</th>
          <th>Transport</th>
          <th>Courier</th>
          <th>Status</th>
          <% if (userRole === 'admin') { %>
            <th>Actions</th>
          <% } %>
        </tr>
      </thead>
      <tbody>
        <% shipments.forEach(shipment => { %>
          <tr>
            <td><%= shipment.date.toISOString().slice(0,16).replace('T',' ') %></td>
            <td><%= shipment.location %></td>
            <td>
              <% if (userRole === 'admin') { %>
                <a href="/shipments/edit/<%= shipment.id %>"><%= shipment.tracking %></a>
              <% } else { %>
                <%= shipment.tracking %>
              <% } %>
            </td>
            <td><%= shipment.client %></td>
            <td><%= shipment.transport %></td>
            <td><%= shipment.courier %></td>
            <td><%= shipment.status %></td>
            <% if (userRole === 'admin') { %>
              <td>
                <a href="/shipments/edit/<%= shipment.id %>" class="btn btn-warning btn-sm">Edit</a>
                <a href="/shipments/delete/<%= shipment.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
              </td>
            <% } %>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
