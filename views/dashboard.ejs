<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>DamaTrack Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body {
      background-color: #f7f7f7; /* Very light gray */
    }
    h1 {
      color: red;
      font-weight: bold;
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }
    .btn-sm i {
      margin-right: 4px;
    }
    .status-tag {
      padding: 2px 8px;
      border-radius: 6px;
      font-size: 0.85em;
      color: #fff;
    }
    .status-InTransit { background-color: #ffc107; }   /* Yellow */
    .status-Delivered { background-color: #28a745; }   /* Green */
    .status-Delayed { background-color: #dc3545; }     /* Red */
    .status-Processing { background-color: #0d6efd; }  /* Blue */
  </style>
</head>
<body class="container py-5">
  <h1 class="text-center mb-4">Dama Cargo Logistics</h1>

  <div class="text-end mb-3">
    <a href="/shipments/add" class="btn btn-primary">
      <i class="fas fa-plus"></i> Add Shipment
    </a>
    <a href="/logout" class="btn btn-secondary">Logout</a>
  </div>

  <table class="table table-bordered table-hover table-sm bg-white shadow-sm">
    <thead class="table-dark">
      <tr>
        <th>Date</th>
        <th>Location</th>
        <th>Tracking #</th>
        <th>Client</th>
        <th>Transport</th>
        <th>Courier</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% shipments.forEach(shipment => { %>
        <tr>
          <td><%= shipment.date ? shipment.date.toISOString().slice(0, 10) : '' %></td>
          <td><%= shipment.location || '' %></td>
          <td><%= shipment.tracking %></td>
          <td><%= shipment.client || '' %></td>
          <td><%= shipment.transport || '' %></td>
          <td><%= shipment.courier || '' %></td>
          <td>
            <% if (shipment.status) { %>
              <span class="status-tag status-<%= shipment.status.replace(/\s+/g, '') %>">
                <%= shipment.status %>
              </span>
            <% } else { %>
              â€”
            <% } %>
          </td>
          <td>
            <a href="/shipments/edit/<%= shipment.id %>" class="btn btn-warning btn-sm me-1">
              <i class="fas fa-edit"></i> Edit
            </a>
            <a href="/shipments/delete/<%= shipment.id %>" class="btn btn-danger btn-sm">
              <i class="fas fa-trash"></i> Delete
            </a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
