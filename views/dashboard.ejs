<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
      <h2>DamaTrack Dashboard</h2>
      <div>
        <a href="/shipments/new" class="btn btn-primary">Add Shipment</a>
        <a href="/logout" class="btn btn-secondary">Logout</a>
      </div>
    </div>

    <p class="mt-2">Logged in as <strong><%= username %></strong> (<%= role %>)</p>

    <table class="table table-bordered mt-3">
      <thead>
        <tr>
          <th>Date</th>
          <th>Location</th>
          <th>Tracking</th>
          <th>Client</th>
          <th>Transport</th>
          <th>Courier</th>
          <th>Status</th>
          <% if (role === 'admin') { %>
          <th>Actions</th>
          <% } %>
        </tr>
      </thead>
      <tbody>
        <% shipments.forEach(s => { %>
        <tr>
          <td><%= s.date.toISOString().slice(0,16).replace('T', ' ') %></td>
          <td><%= s.location %></td>
          <td><a href="/shipments/edit/<%= s.id %>"><%= s.tracking %></a></td>
          <td><%= s.client %></td>
          <td><%= s.transport %></td>
          <td><%= s.courier %></td>
          <td><%= s.status %></td>
          <% if (role === 'admin') { %>
          <td>
            <a href="/shipments/edit/<%= s.id %>" class="btn btn-warning btn-sm">Edit</a>
            <a href="/shipments/delete/<%= s.id %>" class="btn btn-danger btn-sm">Delete</a>
          </td>
          <% } %>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
